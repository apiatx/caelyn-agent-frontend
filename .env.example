# CryptoHippo Environment Variables
# Copy this file to .env and update with your values

# Basic Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database_name

# Security Configuration (REQUIRED for production)
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long
SESSION_SECRET=your-super-secure-session-secret-at-least-32-characters-long

# HTTPS Configuration (Production)
FORCE_HTTPS=false
HSTS_MAX_AGE=31536000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration (Production)
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Content Security Policy
# CSP_REPORT_URI=https://yourdomain.com/csp-report
CSP_REPORT_ONLY=false

# JWT Configuration
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# API Keys (Optional but recommended)
ANTHROPIC_API_KEY=your-anthropic-api-key
BASESCAN_API_KEY=your-basescan-api-key
ETHERSCAN_API_KEY=your-etherscan-api-key
TAOSTATS_API_KEY=your-taostats-api-key

# Production Security Checklist:
# 1. Set strong JWT_SECRET (32+ characters)
# 2. Set strong SESSION_SECRET (32+ characters)
# 3. Enable FORCE_HTTPS=true
# 4. Configure ALLOWED_ORIGINS with your domain
# 5. Set up CSP_REPORT_URI for monitoring
# 6. Use strong database credentials
# 7. Keep API keys secure and rotate regularly